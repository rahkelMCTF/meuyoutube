@model meuyoutube.Models.DTO.CadastrarDTO

<form class="row g-3" enctype="multipart/form-data" method="POST" asp-action="Cadastrar" asp-controller='Cadastrar' name="formulario" id="formulario">
  <div class="col-md-6">
    <label for="titulo" class="form-label">Titulo</label>
    <input type="text" class="form-control" id="titulo" name="Titulo">
  </div>
  <div class="col-12">
    <label for="descricao" class="form-label">Descrição</label>
    <input type="text" class="form-control" id="descricao" name="Descricao">
  </div>
  <div class="col-md-4">
    <label for="playlist" class="form-label">PlayList</label>
    <select id="playlist" class="form-select">
      <option selected>Selecione...</option>
      <option>...</option>
    </select>
  </div>
  <div class="col-md-4">
    <label for="visibilidade" class="form-label">Visibilidade</label>
    <select id="visibilidade" name="Visibilidade" class="form-select">
      <option value="0">Selecione...</option>
      @foreach(var item in @Model.visibilidade)
      {
        <option value="@item.Id">@item.Descricao</option>
      }
    </select>
  </div>
  <div class="input-group">
  <input type="file" class="form-control" id="inputGroupFile04" name="Arquivo" aria-describedby="inputGroupFileAddon04" aria-label="Upload">
</div>
  <div class="col-12">
    <button type="submit" class="btn btn-primary">Enviar</button>
  </div>
</form>

<script src="/lib/jquery/dist/jquery.min.js"></script>
<script src="/js/cadastrar.js"></script>